---
import BaseHead from './BaseHead.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';

const { title, description, image } = Astro.props;
---

<html lang='en'>
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body class='bg-slate-800 w-full flex flex-col items-center justify-center'>
    <Header />
    <main class='w-full flex flex-col items-center min-h-dvh mt-4 max-w-screen-sm px-5 md:px-0'>
      <slot />
    </main>
    <Footer />
  </body>
</html>
