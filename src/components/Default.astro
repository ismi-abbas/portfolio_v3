---
import BaseHead from './BaseHead.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';

// for SEO
const { title, description, image } = Astro.props;
---

<html lang='en'>
    <head>
        <BaseHead title={title} description={description} image={image} />
    </head>
    <body class='bg-gray-800 max-w-screen-md container mx-auto'>
        <Header />
        <main class='mx-auto w-full justify-center flex flex-col items-center px-10 md:px-20 mb-20 mt-14'>
            <slot />
        </main>
        <Footer />
    </body>
</html>
