---
const currentYear = new Date().getFullYear();
const links = [
  {
    href: 'https://astro.build/',
    label: 'Astro',
    type: 'text',
  },
  {
    href: 'https://github.com/ismi-abbas/portfolio_v3',
    label: 'Github Repository',
    type: 'image',
    src: '/github-mark-white.svg',
  },
];
---

<footer
  class='left-0 right-0 w-full py-4 px-6 bg-gradient-to-t from-background/90 to-transparent backdrop-blur-sm z-50'>
  <div class='max-w-screen-xl mx-auto flex items-center justify-center gap-3 text-sm text-white/80'>
    <span class='hover:text-white transition-colors duration-300'>&copy; {currentYear} ismi-abbas.com</span>
    <span class='text-white/60'>•</span>
    <span>
      Built with <a
        href={links[0].href}
        target='_blank'
        rel='noopener noreferrer'
        class='text-white hover:text-primary transition-colors duration-300 font-medium'>
        {links[0].label}
      </a>
    </span>
    <span class='text-white/60'>•</span>
    <a
      href={links[1].href}
      target='_blank'
      rel='noopener noreferrer'
      class='hover:opacity-80 transition-all duration-300 transform hover:scale-110'
      aria-label={links[1].label}>
      <img src={links[1].src} alt={links[1].label} class='h-4 w-4' />
    </a>
  </div>
</footer>
