---
import { motion } from 'framer-motion';

export interface Props {
    title: string;
    description: string;
    additionalDescription: string[];
    image: string;
}

const { title, description, additionalDescription, image } = Astro.props as Props;
---

<motion.div
    className='mt-2 h-auto p-2 border border-slate-600/80'
    initial={{ opacity: 0, y: 50 }}
    animate={{ opacity: 1, y: 0 }}
    transition={{ duration: 2, type: 'spring', stiffness: 300 }}
    client:load>
    <div class='flex-1 flex flex-col justify-between p-2'>
        <img src={image} alt='logo' loading='lazy' class='h-56 object-cover' />
        <div class='flex-col mt-2'>
            <h1 class='text-white font-medium'>{title}</h1>
            <h3 class='text-white text-sm'>{description}</h3>
            <ul class='mt-2'>
                {
                    additionalDescription ? (
                        additionalDescription.map((item: any) => (
                            <li class='text-white text-sm list-disc list-inside'>{item}</li>
                        ))
                    ) : (
                        <div />
                    )
                }
            </ul>
        </div>
    </div>
</motion.div>
