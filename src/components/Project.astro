---
const { title, description, app_link, github_link, image } = Astro.props;
import { motion } from 'framer-motion';
---

<motion.div
    className='mt-4'
    initial={{ opacity: 0, y: 50 }}
    animate={{ opacity: 1, y: 0 }}
    transition={{ duration: 1.5, type: 'spring', stiffness: 200 }}
    client:load>
    <div class='rounded-md mt-2 h-auto hover:cursor-pointer hover:ring-1 p-2 border border-slate-100/20'>
        <div class='flex-1 flex flex-col justify-between'>
            <div class='w-full block rounded-lg p-4'>
                <img src={image} alt='logo' loading='lazy' class='rounded-md w-full h-96 object-cover' />
                <div class='flex-col mt-2'>
                    <h1 class='text-white font-base'>{title}</h1>
                    <h3 class='text-white'>{description}</h3>

                    <div class='mt-2'>
                        <a href={app_link} target='_blank' class='rounded bg-white p-2'>Live Showcase</a>
                        <a href={github_link} target='_blank' class='rounded bg-white p-2'>Github</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</motion.div>
