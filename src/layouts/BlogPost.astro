---
import type { CollectionEntry } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import Default from '../components/Default.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, pubDate, updatedDate, heroImage } = Astro.props;
---

<Default>
    <article class='flex flex-col justify-center items-center border-dashed border border-gray-700 border-t-0'>
        {heroImage && <img width={720} height={360} src={heroImage} alt='' class='rounded-md' />}
        <h1 class='text-xl font-medium mt-2'>{title}</h1>
        <FormattedDate date={pubDate} />
        {
            updatedDate && (
                <div class='last-updated-on'>
                    Last updated on <FormattedDate date={updatedDate} />
                </div>
            )
        }
        <hr />
        <slot />
    </article>
</Default>
