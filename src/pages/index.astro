---
import BaseHead from '../components/BaseHead.astro';
import { SITE_DESCRIPTION } from '../consts';
import Default from '../components/Default.astro';
import ImageSlider from '../components/motions/ImageSlider';

const imageUrls = '/jom_launch.jpeg';

const biography = [
  {
    date: '2024 - Present',
    role: 'Web Developer',
    company: 'CTOS Credit System',
    description: 'Building and maintaining web applications for credit reporting systems.',
  },
  {
    date: '2023',
    role: 'Software Engineer',
    company: 'Petronas Digital (FPT Software)',
    description: 'Developed enterprise solutions for digital transformation initiatives.',
  },
  {
    date: '2022',
    role: 'Software Developer',
    company: 'Maybank',
    description: 'Started professional journey in banking technology sector.',
  },
];
---

<html lang='en'>
  <head>
    <BaseHead title='Abbas Puzi' description={SITE_DESCRIPTION} />
  </head>
  <Default>
    <div class='w-full px-10 flex gap-2 p-4 hover:scale-105 transition-transform duration-300'>
      <ImageSlider client:load url={imageUrls} alt='website-picture' />
    </div>

    <div class='w-full max-w-lg'>
      <div
        class='bg-slate-700 mt-8 text-center p-2 w-full rounded-md text-lg font-medium backdrop-blur-lg backdrop-filter text-slate-200'>
        <h3>Hello, I'm a Fullstack Developer based in Malaysia!</h3>
      </div>
    </div>

    <div class='mt-8 w-full text-white'>
      <h1 class='text-4xl font-semibold'>Abbas Puzi</h1>
      <h3 class='text-lg'>Software <span class='bg-sky-800 px-1'>Craftsman</span></h3>
    </div>

    <section class='w-full text-white mt-4'>
      <h1 class='underline underline-offset-4 decoration-2 decoration-slate-600 font-medium text-lg'>Bio</h1>
      <div class='leading-relaxed tracking-wide mt-4 space-y-3 font-thin text-pretty'>
        <p>
          ðŸ‘‹ Greetings! I'm Abbas, a passionate software developer hailing from the vibrant tech scene of Malaysia. My
          expertise lies in crafting exceptional web experiences using cutting-edge technologies.
        </p>
        <p>
          ðŸ’» My tech stack includes:
          <ul class='list-disc list-inside ml-4 mt-2 space-y-1'>
            <li>Node.js for robust back-end development</li>
            <li>JavaScript and TypeScript for versatile programming</li>
            <li>React and Next.js for building dynamic front-end applications</li>
            <li>Tailwind CSS for creating sleek, responsive designs</li>
          </ul>
        </p>
        <p>
          ðŸš€ As a developer, I thrive on transforming innovative ideas into functional, user-centric solutions. My
          portfolio showcases a diverse range of projects that demonstrate my technical prowess and creative
          problem-solving skills.
        </p>
        <p>Ready to bring your vision to life? Let's collaborate and create something extraordinary together!</p>
      </div>

      <section class='w-full text-white mt-4'>
        <div class='flex items-center justify-between'>
          <h1 class='underline underline-offset-4 decoration-2 decoration-slate-600 font-medium text-lg'>Career</h1>
          <a
            href='/resume.pdf'
            target='_blank'
            class='inline-flex items-center gap-1 text-sm text-neutral-400 hover:text-sky-500 transition-colors'>
            <span>View Resume</span>
            <svg xmlns='http://www.w3.org/2000/svg' class='size-4' viewBox='0 0 24 24'>
              <path
                fill='currentColor'
                d='M13 19h-2v-8.25L8.75 13l-1.5-1.5L12 6.75l4.75 4.75l-1.5 1.5L13 10.75zm7 3H4v-9h2v7h12v-7h2z'></path>
            </svg>
          </a>
        </div>
        <div class='flex flex-col font-light mt-4 space-y-4'>
          {
            biography.map(({ date, role, company, description }) => (
              <div class='flex flex-col space-y-1'>
                <div class='flex items-center gap-2'>
                  <span class='text-neutral-400 text-sm'>{date}</span>
                  <span class='h-[1px] w-4 bg-neutral-700' />
                  <span class='text-sky-500 font-medium'>{role}</span>
                </div>
                <div class='flex flex-col pl-6'>
                  <span class='text-neutral-300'>{company}</span>
                  <p class='text-sm text-neutral-400'>{description}</p>
                </div>
              </div>
            ))
          }
        </div>
      </section>
    </section>
  </Default>
</html>
