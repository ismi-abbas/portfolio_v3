---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Default from '../components/Default.astro';
import ImageSlider from '../components/motions/ImageSlider';

const imageUrls = '/jom_launch.jpeg';

const biography = [
  {
    date: 'July, 1998',
    description: 'Born in the picturesque town of Gerik.',
  },
  {
    date: 'April, 2021',
    description: "Successfully completed my Bachelor's in Islamic Studies.",
  },
  {
    date: 'May, 2021',
    description: 'Self learning software development journey begins.',
  },
  {
    date: 'Jan, 2022',
    description: 'Embarked on my journey in the IT industry with Maybank.',
  },
  {
    date: 'April, 2023',
    description:
      'Embraced a new opportunity at Petronas Digital, collaborating with FPT Software Malaysia as the vendor.',
  },
  {
    date: 'Jan, 2024',
    description: 'Transitioned into the dynamic world of frontend development at CTOS Credit System.',
  },
];
---

<html lang='en'>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Default>
    <div class='w-full px-10 flex gap-2'>
      <ImageSlider client:load url={imageUrls} alt='website-picture' />
    </div>

    <div class='w-full max-w-lg'>
      <div
        class='bg-slate-700 mt-8 text-center p-2 w-full rounded-md text-lg font-medium backdrop-blur-lg backdrop-filter text-slate-200'>
        <h3>Hello, I'm a Fullstack Developer based in Malaysia!</h3>
      </div>
    </div>

    <div class='mt-8 w-full text-white'>
      <h1 class='text-4xl font-bold'>Abbas Puzi</h1>
      <h3 class='text-lg'>Digital <span class='bg-sky-700 px-1'>Craftman</span></h3>
    </div>

    <section class='w-full text-white mt-8'>
      <h1 class='underline underline-offset-4 decoration-4 decoration-slate-600 font-medium text-lg'>Work</h1>
      <div class='leading-relaxed tracking-wide mt-4 space-y-3 font-thin'>
        <p>
          üëã Hi, I'm Abbas, a software developer from Malaysia. I love building things for the web using Node.js,
          JavaScript, Typescript, React, Next.js, and styling with Tailwind CSS.
        </p>
        <p>
          üíª As a coder, I enjoy turning ideas into functional and user-friendly solutions. Check out my portfolio to
          see some of my work and projects.
        </p>
        <p>Let's create something amazing together!</p>
      </div>
    </section>

    <section class='w-full text-white mt-8'>
      <h1 class='underline underline-offset-4 decoration-4 decoration-slate-600 font-medium text-lg'>Bio</h1>

      <div class='flex flex-col font-light mt-4 debug space-y-2'>
        {
          biography.map((entry) => (
            <div class='flex gap-4'>
              <div class='w-24'>{entry.date}</div>
              <div class='flex flex-1'>{entry.description}</div>
            </div>
          ))
        }
      </div>
    </section>

    <section class='w-full text-white mt-8'>
      <h1 class='underline underline-offset-4 decoration-4 decoration-slate-600 font-medium text-lg'>I ‚ù§Ô∏è</h1>
      <p class='text-justify leading-relaxed mt-4'>Games and coding</p>
    </section>
  </Default>
</html>
