---
import Default from '../components/Default.astro';

const services = [
  'Static Landing Pages',
  'Small Scale Web Applications',
  'Application Debugging & Optimization',
  '1 to 1 Consultation',
];
---

<Default title='Hire Me' description='Get in touch for your next project'>
  <div class='max-w-2xl mx-auto'>
    <h1 class='text-white text-3xl mb-2'>Let's Work Together</h1>
    <p class='text-neutral-400 mb-8'>Get in touch for your next project</p>

    <div class='bg-neutral-900/40 backdrop-blur-sm rounded-lg p-8'>
      <div class='mb-8'>
        <h2 class='text-white text-xl mb-4'>Services Offered</h2>
        <ul class='space-y-2'>
          {
            services.map((service) => (
              <li class='flex items-center gap-2 text-neutral-300'>
                <svg xmlns='http://www.w3.org/2000/svg' class='size-5 text-sky-500' viewBox='0 0 24 24'>
                  <path fill='currentColor' d='M9 16.17L4.83 12l-1.42 1.41L9 19L21 7l-1.41-1.41z' />
                </svg>
                <span>{service}</span>
              </li>
            ))
          }
        </ul>
      </div>

      <form action='/hire-me/submit' class='space-y-6'>
        <div class='space-y-4'>
          <div class='space-y-2'>
            <label class='text-white text-sm'>Your Name</label>
            <input
              type='text'
              name='name'
              required
              class='w-full px-4 py-2 bg-neutral-800/50 border border-neutral-700 rounded-md text-white placeholder:text-neutral-500 focus:outline-none focus:ring-2 focus:ring-sky-500/50 focus:border-sky-500/50 transition-colors'
              placeholder='John Doe'
            />
          </div>

          <div class='space-y-2'>
            <label class='text-white text-sm'>Email Address</label>
            <input
              type='email'
              name='contact'
              required
              class='w-full px-4 py-2 bg-neutral-800/50 border border-neutral-700 rounded-md text-white placeholder:text-neutral-500 focus:outline-none focus:ring-2 focus:ring-sky-500/50 focus:border-sky-500/50 transition-colors'
              placeholder='john@example.com'
            />
          </div>

          <div class='space-y-2'>
            <label class='text-white text-sm'>Project Details</label>
            <textarea
              name='message'
              rows='4'
              class='w-full px-4 py-2 bg-neutral-800/50 border border-neutral-700 rounded-md text-white placeholder:text-neutral-500 focus:outline-none focus:ring-2 focus:ring-sky-500/50 focus:border-sky-500/50 transition-colors resize-none'
              placeholder='Tell me about your project...'></textarea>
          </div>
        </div>

        <button
          type='submit'
          class='w-full bg-gradient-to-r from-sky-500 to-sky-600 text-white py-2.5 px-4 rounded-md hover:from-sky-600 hover:to-sky-700 focus:outline-none focus:ring-2 focus:ring-sky-500/50 transition-all duration-200 font-medium'>
          Send Message
        </button>
      </form>
    </div>

    <p class='text-neutral-400 text-sm text-center mt-6'>
      You can also reach me at{' '}
      <a href='mailto:abbaspuzi.dev@gmail.com' class='text-sky-500 hover:text-sky-400 transition-colors'>
        abbaspuzi.dev@gmail.com
      </a>
    </p>
  </div>
</Default>
